<p style="color: green"><%= notice %></p>

<div class="container">
  <h2>Products</h2>

  <div id="products">
    <% @products.each do |product| %>
      <p><%= product.name %> <%= link_to "Show this product", product %></p>
    <% end %>
    <%= link_to "New product", new_product_path, class: "btn" %>
  </div>
</div>
